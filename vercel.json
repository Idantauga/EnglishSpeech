{
  "version": 2,
  "buildCommand": "cd client && npm install && npx craco build",
  "outputDirectory": "client/build",
  "framework": "create-react-app",
  "functions": {
    "api/*.js": {
      "memory": 2048,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}