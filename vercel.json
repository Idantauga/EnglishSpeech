{
  "version": 2,
  "buildCommand": "cd client && npm install && npx craco build",
  "outputDirectory": "client/build",
  "framework": "create-react-app",
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/:path*", "destination": "/index.html" }
  ]
}